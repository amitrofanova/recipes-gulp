//- TODO: rename form
mixin modify-recipe
	form(action="#" method="post" class="modify-recipe")&attributes(attributes)

		section.form__section
			span.form__select-input
				select(name="groups" required).modify-recipe__dish-group
					option(class="titleOption" value="" hidden) Выбрать группу
			span.form__select-input
				select(name="recipes" disabled).modify-recipe__recipe-to-modify
					option(hidden value="") Выбрать рецепт
			//- TODO: rename modify-btn
			input(type="button" value="Начать" class="modify-recipe__modify-btn form__btn" disabled)
			
		section.modify-recipe__modify-area
			section.form__section
				input(type="text" name="title" placeholder="Название блюда" required).modify-recipe__title-input.form__text-input
				
			section.form__section
				input(type="text" name="description" placeholder="Описание").modify-recipe__description-input.form__text-input
				
			section.form__section
				.modify-recipe__section-title Фотографии
				.modify-recipe__image-preview-wrap
					.modify-recipe__img-wrap
						img(class="modify-recipe__image-preview")
					.modify-recipe__img-wrap
						img(class="modify-recipe__image-preview-min")
				input(type="button" value="Изменить фото" class="modify-recipe__open-editor-btn form__btn")
				
			section.form__section
				.modify-recipe__section-title Ингредиенты
				.modify-recipe__ingredients
				.modify-recipe__input-wrapper
					input(type="text" name="ingredient" placeholder="Добавить ингредиент").modify-recipe__ingredient-input.form__text-input
					.modify-recipe__new-ingredient-btn
		  
			section.form__section
				.modify-recipe__section-title Этапы приготовления
				.modify-recipe__steps
				.modify-recipe__input-wrapper
					input(type="text" name="step" placeholder="Добавить этап приготовления").modify-recipe__step-input.form__text-input
					.modify-recipe__new-step-btn
									
			section.form__controls
				input(type="button" value="Сохранить изменения" class="modify-recipe__submit-btn form__btn")
				input(type="button" value="Отменить изменения" class="modify-recipe__reset-btn form__btn")
