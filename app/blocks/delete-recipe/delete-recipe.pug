mixin delete-recipe
	form(action="#" method="post" class="delete-recipe")&attributes(attributes)

		section.form__section
			
			select(name="groups" required).delete-recipe__dish-group.form__select-input
				option(hidden value="") Выбрать группу

			select(name="recipes" disabled).delete-recipe__recipe-to-delete.form__select-input
				option(hidden value="") Выбрать рецепт
	
			input(type="button" value="Удалить" class="delete-recipe__delete-recipe form__btn" disabled)
